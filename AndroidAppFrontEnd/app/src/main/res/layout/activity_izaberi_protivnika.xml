<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IzaberiProtivnika">



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RVIzaberiIgraca"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

    <Button
        android:id="@+id/pokreniOpetIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresuj listu"
        android:padding="10dp"
        android:textColor="#fff"
        android:background="@drawable/itemlayout"
    />

    <Button
        android:id="@+id/nazadNaPocetnu"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:text="Nazad na pocetnu"
        android:textColor="#fff"
        android:padding="10dp"
        android:background="@drawable/itemlayout"/>


</RelativeLayout>